<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.inherit.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']" position="inside">
                <field name="active_credit_limit"/>
                <field name="warning_amount" invisible="active_credit_limit==False"/>
                <field name="block_limit" invisible="active_credit_limit==False"/>
                <field name="due_amount" invisible="active_credit_limit==False"/>
            </xpath>
        </field>
    </record>
</odoo>