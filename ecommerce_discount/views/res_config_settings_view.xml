<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_res_config_settings_inherit_website" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.website</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='ecom_uom_price_option_setting']" position="after">
                <setting id="ecom_discount" string="Ecommerce Discount">
                    <div class="text-muted">
                        Select discount type and value to be applied for ecommerce sales.
                    </div><br/>
                    <div>
                        <label for="ecommerce_discount_type"/>
                        <br/>
                        <field name="ecommerce_discount_type" widget="radio"/>
                    </div>
                    <div>
                        <label for="ecommerce_discount"/>
                        <br/>
                        <field name="ecommerce_discount"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
