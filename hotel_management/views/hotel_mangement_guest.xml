<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hotel_management_guest_form_view" model="ir.ui.view">
        <field name="name">hotel.management.guest.form</field>
        <field name="model">hotel.management.guest</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <form string="Guest">
                <group>
                    <field name="partner_id"/>
                    <field name="is_guest"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_hotel_management_guest" model="ir.actions.act_window">
        <field name="name">Guests</field>
        <field name="res_model">hotel.management.guest</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>