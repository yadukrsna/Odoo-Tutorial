<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hotel_management_pdf_report" model="ir.ui.view">
        <field name="name">Hotel Management PDF Report Form</field>
        <field name="model">hotel.management.report</field>
        <field name="arch" type="xml">
            <form string="PDF Report">
                <sheet>
                    <group>
                        <field name="date_from" string="Date" widget="daterange"
                               options="{'end_date_field':'date_to'}"/>
                        <field name="date_to" invisible="1"/>
                    </group>
                    <group>
                        <field name="guest_id"/>
                        <field name="room_type"/>
                        <field name="room_id" domain="room_domain"/>
                    </group>
                    <footer>
                        <button string="Download PDF" type="object" name="action_pdf_report" class="btn-primary"/>
                        <button string="Download XLSX" type="object" name="action_xlsx_report" class="btn-primary"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_hotel_management_pdf_report" model="ir.actions.act_window">
        <field name="name">Hotel Management Report</field>
        <field name="res_model">hotel.management.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
