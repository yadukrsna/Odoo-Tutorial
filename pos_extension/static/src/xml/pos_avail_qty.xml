<?xml version="1.0" encoding="utf-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="ProductCard" t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[contains(@class,'product-content')]" position="after">
            <div class="pos-qty fw-bold" style="padding-left: 8px;">
                <t t-esc="props.pos_quantities"/>
            </div>
        </xpath>
    </t>
    <t t-name="ProductCard" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//ProductCard" position="attributes">
            <attribute name="pos_quantities">product.pos_quantities</attribute>
        </xpath>
    </t>
</templates>
