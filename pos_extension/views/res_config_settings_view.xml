<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_config_settings_inherit_pos" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.pos</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_inventory_section']" position="after">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="stock_location_ids"/>
                            <div class="text-muted">
                                Choose the stock location whose quantities will be shown in POS.
                            </div>
                            <br/>
                            <div>
                                <field name="stock_location_ids" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//block[@id='pos_pricing_section']" position="inside">
                <setting string="Discount" help="Set Discount Type">
                    <div>
                        <field name="pos_discount_type" widget="radio"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
