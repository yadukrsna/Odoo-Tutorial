<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form_inherit_pay_counter" model="ir.ui.view">
        <field name="name">sale.order.form.pay.counter</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="convert_currency_id"/>
                <field name="converted_total" currency_field="convert_currency_id" widget="monetary"/>
            </xpath>
        </field>
    </record>
</odoo>
