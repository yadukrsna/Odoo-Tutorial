<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form_inherit_pay_counter" model="ir.ui.view">
        <field name="name">sale.order.form.pay.counter</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="pos_order_id"/>
            </xpath>
            <xpath expr="//page[@name='other_information']/group" position="inside">
                <group string="POS">
                    <field name="pos_session_id"/>
                </group>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_pay_at_counter" string="Pay at Counter" type="object" class="oe_highlight"
                        invisible= "state != 'sale'"/>
            </xpath>
        </field>
    </record>
</odoo>