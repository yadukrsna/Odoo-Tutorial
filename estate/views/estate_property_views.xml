<?xml version="1.0"?>
<odoo>
    <data>
        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_available':True}</field>
        </record>
        <record id="estate_property_list_view" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list string="Properties" decoration-success="state=='offer received' or state=='offer accepted'" decoration-bf="state=='offer accepted'" decoration-muted="state=='sold'">
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability" optional="hide"/>
                    <field name="property_tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="sale_order_id"/>
                </list>
            </field>
        </record>
        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Property Details">
                    <header>
                        <button name="sold_action" type="object" string="Sold" invisible="state=='sold' or state=='cancelled'"/>
                        <button name="cancel_action" type="object" string="Cancel" invisible="state=='sold' or state=='cancelled'"/>
                        <field name="state" widget="statusbar" options="{'clickable':'1'}" statusbar_visible = "new, offer received, offer accepted, sold, cancelled"/>
                    </header>
                    <sheet>
                        <group>
                            <h1>
                                <field name="name" placeholder="Property Name"/>
                            </h1>
                        </group>
                        <group>
                            <field name="property_tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <group>
                                <field name="property_type" options="{'no_create':True}"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_offers"/>
                                <field name="selling_price"/>
                                <field name="sale_order_id"/>
                                <field name="partner_id"/>
                                <field name="product_id"/>
                                <field name="product_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <group>
                                        <field name="description"/>
                                        <field name="bedrooms"/>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="active"/>
                                    </group>
                                    <group>
                                        <field name="state"/>
                                        <field name="garden"/>
                                        <field name="garden_orientation" invisible="garden==False"/>
                                        <field name="garden_area" invisible="garden==False"/>
                                        <field name="living_area"/>
                                        <field name="total_area"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="property_offers" readonly="state=='offer accepted' or state=='sold' or state=='cancel'"/>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="buyer"/>
                                    <field name="seller"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="estate_property_search_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="selling_price"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="facades"/>
                    <field name="garage"/>
                    <field name="garden"/>
                    <field name="garden_area"/>
                    <field name="garden_orientation"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Available" name="available" domain="['|', ('state', '=' , 'new'),('state', '=', 'offer received')]"/>
                    <filter string="Sold Property" name="sold_property" domain="[('state', '=', 'sold')]"/>
                    <filter string="Cancelled Property" name="cancelled_property" domain="[('state', '=', 'cancelled')]"/>
                    <group string="Group By">
                        <filter name="Postcode" context="{'group_by':'postcode'}"/>
                    </group>
                    <field name="living_area"
                           filter_domain="[('living_area','>=',self)]"/>
                </search>
        </field>
        </record>
    </data>
</odoo>
