<?xml version="1.0"?>
<odoo>
    <data>
        <record id="estate_property_type_action" model="ir.actions.act_window">
            <field name="name">Property Type</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="action_property_offer_stat" model="ir.actions.act_window">
            <field name="name">Property Type Offers</field>
            <field name="res_model">estate.property.offers</field>
            <field name="view_mode">list,form</field>
<!--            <field name="context">{'search_default_property_type': active}</field>-->
<!--            <field name="domain">[('property.property_type_id', '=', active)]</field>-->
        </record>
        <record id="estate_property_type_list" model="ir.ui.view">
            <field name="name">estate.property.type</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <list>
                    <field name="sequence" widget="handle"/>
                    <field name="name" readonly="1"/>
                </list>
            </field>
        </record>

        <record id="estate_property_type_line_form_view" model="ir.ui.view">
            <field name="name">estate.property.type</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(estate.action_property_offer_stat)d" type="action" class="oe_stat_button" icon="fa-envelope">
                                <field name="offer_count" string="Offers" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </group>
                        <notebook>
                            <page name="Properties">
                                <field name="property_type_line_ids" readonly="true">
                                    <list>
                                        <field name="name"/>
                                        <field name="expected_price"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
