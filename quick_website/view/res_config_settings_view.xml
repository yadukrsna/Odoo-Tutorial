<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_res_config_settings_inherit_website" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.website</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='website_email_marketing']" position="before">
                <group>
                    <field name="stock_location_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_page" name="Product Page">
        <t t-call="website.layout">
            <div class="container">
                <h3 class="mt-4 mb-4 d-flex justify-content-center">Add product to cart</h3>
                <div class="container">
                    <form action="/product/add_to_cart"
                          method="POST">
                        <input type="hidden" name="csrf_token"
                               t-att-value="request.csrf_token()" />
                        <div class="row row-gap-4">
                            <div class="form-group col-12 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold"
                                           style="width: 200px;" for="customer">
                                        Product
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <select name="product" id="product"
                                                class="col-sm form-control">
                                            <t t-foreach="products" t-as="prod">
                                                <option>
                                                    <t t-out="prod.name" />
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold"
                                           style="width: 200px;"
                                           for="vehicle_model">
                                        Quantity
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <input id="name" type="number"
                                               class="form-control s_website_form_input"
                                               name="name" required="1" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 d-flex justify-content-center">
                                <button name="submit" type="submit"
                                        id="add_to_cart" class="btn btn-primary">Add to cart</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>