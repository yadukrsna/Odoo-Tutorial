<odoo>
    <record id="product_page" model="website.page">
        <field name="name">Custom Add To Cart</field>
        <field name="type">qweb</field>
        <field name="url">/custom_add_cart</field>
        <field name="website_indexed" eval="False"/>
        <field name="is_published">True</field>
        <field name="key">quick_website.product_page</field>
        <field name="arch" type="xml">
            <t name="custom add cart" t-name="quick_website.product_page">
                <t t-call="website.layout">
                    <div class="container">
                        <h3 class="mt-4 mb-4 d-flex justify-content-center">ADD TO CART</h3>

                        <t t-if="request.params.get('success')">
                            <div class="alert alert-success text-center">
                                PRODUCT ADDED TO CART
                            </div>
                        </t>

                        <form action="/custom_add_cart/submit" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-group mb-3 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold" style="width: 200px;">Product
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <select name="product_id" class="form-control" required="1">
                                            <t t-foreach="products" t-as="prod">
                                                <option t-att-value="prod.id">
                                                    <t t-out="prod.name"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold" style="width: 200px;">Quantity
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <input type="number" name="quantity" class="form-control" min="1" required="1"/>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary">Add to cart</button>
                            </div>
                        </form>
                    </div>
                </t>
            </t>
        </field>
    </record>

    <record id="add_to_cart_page" model="website.menu">
        <field name="name">Add to Cart</field>
        <field name="url">/custom_add_cart</field>
        <field name="page_id" ref="quick_website.product_page"/>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">66</field>
    </record>
</odoo>
