<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_product" model="website.page">
        <field name="name">Custom Product Page</field>
        <field name="type">qweb</field>
        <field name="url">/custom_product</field>
        <field name="website_indexed" eval="False"/>
        <field name="is_published">True</field>
        <field name="key">quick_website.custom_product</field>
        <field name="arch" type="xml">
            <t name="custom product" t-name="quick_website.custom_product">
                <t t-call="website.layout">
                    <div class="container">
                        <h3 class="mt-4 mb-4 d-flex justify-content-center">Create a New Product</h3>

                        <t t-if="request.params.get('success')">
                            <div class="alert alert-success text-center">
                                Product created successfully and visible in shop!
                            </div>
                        </t>

                        <form action="/custom_create_product/submit" method="POST" enctype="multipart/form-data">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                            <div class="form-group mb-3 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold" style="width: 200px;">Product Name</label>
                                    <div class="col-sm">
                                        <input type="text" name="name" class="form-control" required="1"/>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold" style="width: 200px;">Price</label>
                                    <div class="col-sm">
                                        <input type="number" name="price" class="form-control" step="0.01" required="1"/>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold" style="width: 200px;">Image</label>
                                    <div class="col-sm">
                                        <input type="file" name="image" class="form-control" accept="image/*"/>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary">Create Product</button>
                            </div>
                        </form>
                    </div>
                </t>
            </t>
        </field>
    </record>

    <record id="menu_custom_product" model="website.menu">
        <field name="name">Custom Product</field>
        <field name="url">/custom_product</field>
        <field name="page_id" ref="quick_website.custom_product"/>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">60</field>
    </record>
</odoo>
