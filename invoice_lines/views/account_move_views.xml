<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_form_inherit_customer_lines" model="ir.ui.view">
        <field name="name">account.move.form.customer.invoice.lines</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Customer Previous Invoices">
                    <field name="customer_invoice_lines_ids">
                        <list editable="bottom">
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="price_unit"/>
                            <field name="move_id" string="Invoice Ref"/>
                            <button name="action_add_invoice_line" type="object" string="Add"/>
                        </list>
                    </field>
                    <button name="action_add_all_invoice_lines" type="object"
                            string="Add All Lines" class="oe_highlight"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
