    <?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.inherit.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="project_id" domain="[('partner_id', '=', partner_id)]"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_create_task" string="Create Tasks" type="object"
                        invisible="state != 'sale' or not project_id or task_created == True"/>
            </xpath>
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button name="action_view_tasks"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-tasks"
                        string="Tasks" invisible="task_created == False">
                    <field name="task_ids" widget="statinfo" string="Tasks"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>