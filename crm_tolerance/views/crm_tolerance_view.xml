<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_res_config_settings_inherit_website" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.website</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='convert_visitor_setting_container']" position="inside">
                <setting id="crm_tolerance_setting" string="CRM Tolerance">
                    <field name="crm_tolerance_time"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
