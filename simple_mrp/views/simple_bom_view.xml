<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="simple_bom_list_view" model="ir.ui.view">
        <field name="name">simple.bom.list.view</field>
        <field name="model">simple.mrp.bom</field>
        <field name="arch" type="xml">
            <list>
                <field name="product_id"/>
                <field name="product_qty"/>
            </list>
        </field>
    </record>

    <record id="simple_bom_form_view" model="ir.ui.view">
        <field name="name">simple.bom.form.view</field>
        <field name="model">simple.mrp.bom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="product_qty"/>
                    </group>
                    <field name="simple_bom_line_ids">
                        <list editable="bottom">
                            <field name="product_id"/>
                            <field name="product_qty"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_simple_bom" model="ir.actions.act_window">
        <field name="name">Simple BOM</field>
        <field name="res_model">simple.mrp.bom</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="simple_bom_menu" name="BOM" parent="simple_mo_root_menu" action="action_simple_bom"/>
</odoo>