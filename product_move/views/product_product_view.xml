<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_product_view_inherit" model="ir.ui.view">
        <field name="name">product.product.view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']" position="inside">
                <group>
                    <field name="quantity"/>
                    <field name="current_uom_id"/>
                    <field name="target_uom_id"/>
                    <field name="converted_quantity"/>
                </group>
            </xpath>
        </field>
    </record>

