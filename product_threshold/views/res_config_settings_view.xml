<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_res_config_settings_inherit_sales" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='stock_packaging']" position="after">
                <setting id="product_threshold" string="Product Threshold">
                    <field name="threshold"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
